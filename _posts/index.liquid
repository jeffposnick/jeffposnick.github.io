---
layout: default.liquid
---
<div class="home">
  <ul class="post-list">
    {% for post in collections.post reversed %}
      <li>
        <span class="post-meta">{{ post.date | date: "%b %d, %Y" }}</span>
        <h2>
          <a class="post-link" href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        {% if post.data.excerpt %}{{ post.data.excerpt }}{% endif %}
      </li>
    {% endfor %}
  </ul>
</div>
