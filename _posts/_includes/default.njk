<!doctype html>
<html lang="en" itemscope itemtype="http://schema.org/Blog">
  {% include 'head.njk' %}
  <body>
    {% include 'header.njk' %}
    <div class="page-content">
      <div class="wrapper">
        {% if title %}
        <h1 class="post-header"><a href="">{{ title }}</a></h1>
        {% endif %}
        {% if date %}
          <p class="post-meta">{{ date.toLocaleDateString() }}</p>
        {% endif %}
        {{ content | safe }}
      </div>
    </div>
    {% include 'footer.njk' %}
    {% include 'register_service_worker.njk' %}
  </body>
</html>
