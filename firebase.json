{
  "hosting": {
    "public": "build",
    "headers": [{
      "source" : "/service-worker.js",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "no-cache"
      }]
    }, {
      "source" : "**/*.@(svg|png)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      }]
    }, {
      "source" : "**/*.njk",
      "headers" : [{
        "key" : "Content-Type",
        "value" : "text/plain"
      }]
    }]
  }
}
